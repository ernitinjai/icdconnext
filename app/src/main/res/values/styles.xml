<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name ="android:textColor">@android:color/black</item>
        <item name ="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>


    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>


    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/white</item>   <!-- normal border color change as you wish -->
        <!--item name="colorControlActivated">#000</item--> <!-- activated color change as you wish -->
        <!--item name="android:textColor">#FFFF3F3C</item--> <!-- checkbox text color -->
    </style>

    <style name="SignInCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/black</item>   <!-- normal border color change as you wish -->
        <!--item name="colorControlActivated">#000</item--> <!-- activated color change as you wish -->
        <!--item name="android:textColor">#FFFF3F3C</item--> <!-- checkbox text color -->
    </style>


    <style name="PopupTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

</resources>
